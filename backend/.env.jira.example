# Jira Integration Configuration
# Copy this to .env and fill in your values

# Jira Cloud instance URL (without https://)
JIRA_HOST=your-company.atlassian.net

# Jira user email
JIRA_USERNAME=your-email@company.com

# Jira API token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token-here

# Jira project key for security issues (e.g., SEC, SECURITY, THREAT)
JIRA_PROJECT_KEY=SEC

# Default assignee for Jira issues (optional)
# Use Jira Account ID (found in user profile URL)
JIRA_DEFAULT_ASSIGNEE=

# Application URL for linking back to threats (optional)
APP_URL=https://your-threat-platform.com

# Jira webhook secret for validating incoming webhooks (optional)
JIRA_WEBHOOK_SECRET=
